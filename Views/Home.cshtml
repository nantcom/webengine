<!-- Section / Latest Posts -->
<section id="latest-posts" class="section"
         ncweb-editablecollection="/blog">

    <div class="container-fluid container-custom">
        <h2 class="mb-50">Latest Posts <a href="/blog" class="ml-20 btn btn-secondary btn-sm animated" data-animation="fadeInRight">Go to Blog</a></h2>
        <div class="carousel carousel-items" data-slick='{
                "slidesToShow": 3,
                "slidesToScroll": 1,
                "responsive": [
                    {
                        "breakpoint": 991,
                        "settings": {
                            "slidesToShow": 2
                        }
                    },
                    {
                        "breakpoint": 575,
                        "settings": {
                            "slidesToShow": 1
                        }
                    }
                ]
            }'>

            @foreach (var page in this.Model.ContentService.GetPagesUnder("/blog"))
            {
                <div class="carousel-item"
                     ncweb-collectionitem itemid="@(page.Id)">
                    <article class="post item">
                        <div class="post-image">
                            <img src="assets/img/posts/post01.jpg" alt=""
                                 ncweb-editableimage="images/blog/@(page.Id)/carousel.png">
                        </div>
                        <div class="post-content">
                            <span class="date text-muted">
                                @(page.Created.ToString("dd MMMM yyyy"))
                            </span>
                            <h4>
                                <a href="@(page.Url)"
                                   ncweb-contentpageid="@(page.Id)"
                                   ncweb-contentpart="Title">
                                    Road to success
                                </a>
                            </h4>
                            <p ncweb-contentpageid="@(page.Id)"
                               ncweb-contentpart="Description">
                                Molestie sit amet lectus non commodo. Praesent in dignissim lectus, eu suscipit diam. Donec vitae turpis dictum...
                            </p>
                            <a href="@(page.Url)" class="btn btn-primary btn-sm">
                                Read more
                            </a>
                        </div>
                        <ul class="post-meta">
                            <li>
                                <i class="li-feedback"></i>
                                - feedback
                            </li>
                        </ul>
                    </article>
                </div>
            }
        </div>
    </div>

</section>


